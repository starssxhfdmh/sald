// Test interface system

// Basic interface
interface Printable {
    fun print(self)
}

// Interface with multiple methods
interface Comparable {
    fun compare(self, other)
    fun equals(self, other)
}

// Class implementing single interface
class Document implements Printable {
    fun init(self, content) {
        self.content = content
    }
    
    fun print(self) {
        Console.println($"Document: {self.content}")
    }
}

// Class with inheritance AND interface implementation
class Animal {
    fun init(self, name) {
        self.name = name
    }
    
    fun speak(self) {
        Console.println($"{self.name} makes a sound")
    }
}

class Dog extends Animal implements Printable, Comparable {
    fun init(self, name, breed) {
        super.init(name)
        self.breed = breed
    }
    
    fun print(self) {
        Console.println($"Dog: {self.name} ({self.breed})")
    }
    
    fun compare(self, other) {
        return self.name.length() - other.name.length()
    }
    
    fun equals(self, other) {
        return self.name == other.name && self.breed == other.breed
    }
}

// Test usage
Console.println("=== Interface Test ===")

let doc = Document("Hello, World!")
doc.print()

let dog1 = Dog("Rex", "German Shepherd")
let dog2 = Dog("Max", "Golden Retriever")

dog1.print()
dog2.print()

Console.println($"Compare result: {dog1.compare(dog2)}")
Console.println($"Are equal: {dog1.equals(dog2)}")

// Test that inherited speak() still works
dog1.speak()

Console.println("=== All tests passed! ===")
