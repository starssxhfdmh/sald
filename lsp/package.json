{
  "name": "sald-programming-language",
  "displayName": "Sald Programming Language",
  "description": "Full language support for Sald - syntax highlighting, IntelliSense, go-to-definition, and more",
  "version": "0.1.0",
  "publisher": "sald-team",
  "license": "MIT",
  "extensionKind": ["workspace"],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "sald",
    "scripting",
    "async",
    "programming language",
    "language server"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/starssxhfdmh/sald"
  },
  "bugs": {
    "url": "https://github.com/starssxhfdmh/sald/issues"
  },
  "homepage": "https://github.com/starssxhfdmh/sald#readme",
  "contributes": {
    "languages": [
      {
        "id": "sald",
        "aliases": ["Sald", "sald"],
        "extensions": [".sald"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/icon.png",
          "dark": "./images/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "sald",
        "scopeName": "source.sald",
        "path": "./syntaxes/sald.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Sald",
      "properties": {
        "sald.lsp.path": {
          "type": "string",
          "default": "",
          "description": "Path to sald-lsp executable. Leave empty to use default (~/.sald/bin/sald-lsp) or auto-download.",
          "scope": "machine-overridable"
        },
        "sald.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Language Server Protocol features."
        },
        "sald.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "sald.startServer",
        "title": "Start Language Server",
        "category": "Sald"
      },
      {
        "command": "sald.stopServer",
        "title": "Stop Language Server",
        "category": "Sald"
      },
      {
        "command": "sald.restartServer",
        "title": "Restart Language Server",
        "category": "Sald"
      },
      {
        "command": "sald.configurePath",
        "title": "Configure LSP Executable Path",
        "category": "Sald"
      },
      {
        "command": "sald.showAllDiagnostics",
        "title": "Analyze All Workspace Files",
        "category": "Sald"
      },
      {
        "command": "sald.showLogs",
        "title": "Show Output Logs",
        "category": "Sald"
      },
      {
        "command": "sald.runFile",
        "title": "Run Current File",
        "category": "Sald",
        "icon": "$(play)"
      },
      {
        "command": "sald.updateLsp",
        "title": "Update Language Server",
        "category": "Sald"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "sald.runFile",
          "when": "resourceLangId == sald",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "sald.runFile",
          "when": "resourceLangId == sald"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sald.runFile",
        "key": "f5",
        "when": "resourceLangId == sald && !inDebugMode"
      }
    ],
    "snippets": [
      {
        "language": "sald",
        "path": "./snippets/sald.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.19.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}